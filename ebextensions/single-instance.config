# .ebextensions/01-single-instance.config
# Keep single instance (FREE TIER) but optimize for CloudFront

option_settings:
  # Single Instance Environment (FREE TIER)
  aws:elasticbeanstalk:environment:
    EnvironmentType: SingleInstance

  # Instance Configuration
  aws:autoscaling:launchconfiguration:
    InstanceType: t2.micro
    IamInstanceProfile: aws-elasticbeanstalk-ec2-role
    SecurityGroups: !Ref AWSEBSecurityGroup

  # Proxy Configuration
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: nginx

  # Managed Updates
  aws:elasticbeanstalk:managedactions:
    ManagedActionsEnabled: true
    PreferredStartTime: "Sun:03:00"

  aws:elasticbeanstalk:managedactions:platformupdate:
    UpdateLevel: minor

Resources:
  # Security Group - Allow HTTP from anywhere (for CloudFront)
  AWSEBSecurityGroup:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription: Elastic Beanstalk Security Group
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: 80
          ToPort: 80
          CidrIp: 0.0.0.0/0
          Description: Allow HTTP from CloudFront
        - IpProtocol: tcp
          FromPort: 22
          ToPort: 22
          CidrIp: 0.0.0.0/0
          Description: Allow SSH

  # Security Group Egress
  AWSEBSecurityGroupEgress:
    Type: AWS::EC2::SecurityGroupEgress
    Properties:
      GroupId: !Ref AWSEBSecurityGroup
      IpProtocol: -1
      CidrIp: 0.0.0.0/0